<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bob's Euro Food</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <link href="@Url.Content("~/Style/styles.css")" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <link href="@Url.Content("~/Style/recipes.css")" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <meta charset="utf-8" />
    <meta name="Description" content="This is a site dedicated to showing all the food from around Europe, including starters, mains and desserts.">
    @RenderSection("MetaTags", false)
</head>
<body>

    @Html.Partial("_Navbar")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bob's Euro Food</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
@*@RenderSection("scripts", required: false)*@
</body>
</html>